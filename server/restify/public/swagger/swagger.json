{
    "swagger": "2.0",
    "info": {
        "title": "Proture",
        "description": "Example Project",
        "contact": {
            "name": "Fang Jin",
            "email": "windmaomao@gmail.com"
        },
        "version": "0.0.1"
    },
    "host": "localhost:8182",
    "schemes": [
        "http"
    ],
    "basePath": "/v1",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/project": {
            "get": {
                "summary": "Get projects",
                "description": "Get list of projects.\n",
                "tags": [
                    "Project"
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Project"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            },
            "post": {
                "summary": "Add project",
                "description": "Add a project.\n",
                "parameters": [
                    {
                        "name": "project",
                        "in": "body",
                        "description": "project object",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Project"
                        }
                    }
                ],
                "tags": [
                    "Project"
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/update": {
            "get": {
                "summary": "Get updates",
                "description": "Get list of updates.\n",
                "tags": [
                    "Project"
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Update"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            },
            "post": {
                "summary": "Add update",
                "description": "Add a project update.\n",
                "parameters": [
                    {
                        "name": "update",
                        "in": "body",
                        "description": "update object",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Update"
                        }
                    }
                ],
                "tags": [
                    "Project"
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Project": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "example": "Event",
                    "description": "Project full description name"
                },
                "alias": {
                    "type": "string",
                    "example": "event",
                    "description": "Project alias, or code name"
                },
                "description": {
                    "type": "string",
                    "example": "",
                    "description": "Project description"
                },
                "active": {
                    "type": "boolean",
                    "example": true,
                    "default": true,
                    "description": "Indicator if project is active"
                }
            }
        },
        "Update": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string",
                    "example": "deployed to server",
                    "description": "Project update title"
                },
                "projectId": {
                    "type": "string",
                    "example": "4387",
                    "description": "Project id"
                }
            }
        },
        "Error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}
